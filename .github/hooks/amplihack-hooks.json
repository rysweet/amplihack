{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": ".github/hooks/scripts/session-start.sh"
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": ".github/hooks/scripts/session-end.sh"
      }
    ],
    "userPromptSubmitted": [
      {
        "type": "command",
        "bash": ".github/hooks/scripts/user-prompt-submitted.sh"
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/scripts/pre-tool-use.sh"
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/scripts/post-tool-use.sh"
      }
    ],
    "errorOccurred": [
      {
        "type": "command",
        "bash": ".github/hooks/scripts/error-occurred.sh"
      }
    ]
  }
}
