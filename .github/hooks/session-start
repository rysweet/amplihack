#!/usr/bin/env bash
# GitHub Copilot compatible session-start hook
# Wrapper that calls Python implementation in .claude/tools/amplihack/hooks/
#
# This hook runs at session start to:
# - Check amplihack version
# - Load user preferences
# - Initialize logging
# - Check Neo4j status (if used)

set -e

# Get the root directory of the repository
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Call Python implementation
python3 "${REPO_ROOT}/.claude/tools/amplihack/hooks/session_start.py" "$@"
