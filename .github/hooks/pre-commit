#!/usr/bin/env bash
# GitHub Copilot compatible pre-commit hook
# Wrapper that calls Python implementation in .claude/tools/amplihack/hooks/
#
# This hook runs before git commit to:
# - Run linting checks
# - Run formatting checks
# - Run type checking
# - Optionally run tests

set -e

# Get the root directory of the repository
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Call Python implementation
python3 "${REPO_ROOT}/.claude/tools/amplihack/hooks/precommit_installer.py" "$@"
