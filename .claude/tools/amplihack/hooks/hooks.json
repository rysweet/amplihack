{
  "SessionStart": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "~/.amplihack/.claude/tools/amplihack/hooks/session_start.py",
          "timeout": 10
        }
      ]
    }
  ],
  "Stop": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "~/.amplihack/.claude/tools/amplihack/hooks/stop.py",
          "timeout": 120
        }
      ]
    }
  ],
  "PreToolUse": [
    {
      "matcher": "*",
      "hooks": [
        {
          "type": "command",
          "command": "~/.amplihack/.claude/tools/amplihack/hooks/pre_tool_use.py"
        }
      ]
    }
  ],
  "PostToolUse": [
    {
      "matcher": "*",
      "hooks": [
        {
          "type": "command",
          "command": "~/.amplihack/.claude/tools/amplihack/hooks/post_tool_use.py"
        }
      ]
    }
  ],
  "UserPromptSubmit": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "~/.amplihack/.claude/tools/amplihack/hooks/user_prompt_submit.py",
          "timeout": 10
        },
        {
          "type": "command",
          "command": "~/.amplihack/.claude/tools/amplihack/hooks/workflow_classification_reminder.py",
          "timeout": 5
        }
      ]
    }
  ],
  "PreCompact": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "~/.amplihack/.claude/tools/amplihack/hooks/pre_compact.py",
          "timeout": 30
        }
      ]
    }
  ]
}
